{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",          // Отключить правило для использования any
    "react-hooks/exhaustive-deps": "off",                 // Отключить предупреждения для useEffect зависимостей
    "@typescript-eslint/no-unused-vars": "off",          // Для других неиспользуемых переменных выводить предупреждения
    "react/jsx-key": "off",                               // Отключить предупреждение о ключах в списках
    "@typescript-eslint/no-empty-interface": "off",        // Отключить правило для пустых интерфейсов
    "@typescript-eslint/no-empty-object-type" : "off",
    "@typescript-eslint/no-unused-expressions" : "off"
  }
}
